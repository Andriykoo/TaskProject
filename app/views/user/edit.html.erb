<h2 class="tasks-title text-center">Edit user:</h2>

<div class="container">
    <div class="form-horizontal">
       <%= render partial: "layouts/error_message" %>
       <%= form_for( @user,url: user_update_path(@user), html: { method: :post }) do |f| %>

          <div class="form-group">
            <div class="control-label col-md-2">
              <%= f.label :email %>
            </div>
            <div class="user-field maybe-error col-md-10">
              <%= f.email_field :email, class:"form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :name,class:"control-label col-md-2" %>
            <div class="col-md-10">
              <%= f.text_field :name, class:"form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <%= f.submit "Save",class:"btn btn-success" %>
            </div>
          </div>

    <% end%>
    </div>

    <div>
      <%= link_to "< Back", :back, class: "btn btn-default btn-back" %>
    </div>
</div>