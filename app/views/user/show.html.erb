<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Email</th>

  </tr>
  </thead>

  <tbody>
  <%@users.each do |user|%>
  <tr>

    <td>
      <div class="user-image"><%= gravatar_for user %></div>
    </td>
    <td><%=user.name%></td>
    <td><%=user.email%></td>
    <td>
      <%= link_to 'User Tasks | ', user_index_path(id: user.id), {class:"page-scroll"}%>

      <%if current_user.has_role? :admin  %>
          <%= link_to 'Edit | ', user_edit_path(id: user.id), {class:"page-scroll"}%>
          <%= link_to 'Delete', user_destroy_path(id: user.id), class:"page-scroll",
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
      <%end%>

    </td>


  </tr>
  <% end %>
  </tbody>
</table>