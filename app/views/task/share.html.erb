<div id="shareform" >
    <h4> Enter email for shares user </h4>
  <%= form_tag( task_share_for_user_path(@task_id)) do  %>
        <div class="form-group">
          <%= label_tag :email_user, "Email User", class:"control-label col-md-2" %>
          <div class="col-md-10">
            <%= email_field :email, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= submit_tag "Share",class:"btn btn-default" %>
          </div>
        </div>

    <%end%>
</div>