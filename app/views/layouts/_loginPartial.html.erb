<% if user_signed_in? %>

    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
        <%=current_user.email if !current_user.nil?%>
      </a>
      <ul class="dropdown-menu" role="menu">
        <li > <%= link_to 'Profile',user_index_path(current_user.id) %> </li>

        <li > <%= link_to 'Task', destroy_user_session_path, :method => :delete %></li>

        <li class="divider"></li>

        <li class="hvr-shutter-out-horizontal">
          <%= link_to 'Log out', destroy_user_session_path, :method => :delete %>
        </li>
      </ul>
    </li>

<% else %>
  <li class="hvr-sweep-to-bottom"><%= link_to 'Register', new_user_registration_path, {:class=>"page-scroll"}%></li>
  <li class="hvr-sweep-to-bottom"><%= link_to 'Login', new_user_session_path %></li>
<% end %>



