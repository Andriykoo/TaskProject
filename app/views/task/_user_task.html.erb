<div class="col-md-6 col-md-offset-3 contact-form wow fadeInRight animated" data-wow-delay="0.4s" style="visibility: visible; -webkit-animation-delay: 0.4s;">
  <div class="panel panel-success">
    <div class="panel-heading text-center"><h4><%=task.title%></h4></div>
    <div class="panel-body">
      <dl class="dl-horizontal col-sm-8">
        <dd><%=task.text%></dd>
        <dt></dt>
        <dd>
          <%if current_user.has_role? :admin  %>
              <%= link_to 'Edit | ', task_edit_path(id: task.id), {class:"page-scroll"}%>
              <%= link_to 'Delete', task_destroy_path(id: task.id), class:"page-scroll",
                          method: :delete,
                          data: { confirm: 'Are you shure?' } %>
          <%end%>
        </dd>
      </dl>
    </div>
  </div>
</div>

