
    <div class="form-group">
      <%= f.label :title,class:"control-label col-md-2" %>
      <div class="col-md-10">
        <%= f.text_field :title, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :text,class:"control-label col-md-2" %>
      <div class="col-md-10">
